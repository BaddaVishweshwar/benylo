{% comment %}
  Pet Store Hero Section - Snitch-Inspired Design
  Professional, minimalist hero with bold typography
{% endcomment %}

{{ 'pet-store-professional.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .pet-hero-section-{{ section.id }} {
    position: relative;
    min-height: {{ section.settings.section_height }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ section.settings.background_color }};
    overflow: hidden;
  }
  
  .pet-hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: {{ section.settings.image_opacity | divided_by: 100.0 }};
  }
  
  .pet-hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: {{ section.settings.overlay_color }};
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
  }
  
  .pet-hero-content {
    position: relative;
    z-index: 2;
    text-align: {{ section.settings.text_alignment }};
    padding: 80px 24px;
    max-width: 900px;
    margin: 0 auto;
  }
  
  .pet-hero-eyebrow {
    font-size: 0.875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: {{ section.settings.eyebrow_color }};
    margin-bottom: 16px;
  }
  
  .pet-hero-title {
    font-size: clamp(2.5rem, 6vw, 5rem);
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: {{ section.settings.title_color }};
    line-height: 1.1;
    margin-bottom: 24px;
  }
  
  .pet-hero-subtitle {
    font-size: clamp(1rem, 2vw, 1.5rem);
    color: {{ section.settings.subtitle_color }};
    font-weight: 400;
    margin-bottom: 40px;
    line-height: 1.6;
    max-width: 600px;
    margin-left: {% if section.settings.text_alignment == 'center' %}auto{% else %}0{% endif %};
    margin-right: {% if section.settings.text_alignment == 'center' %}auto{% else %}0{% endif %};
  }
  
  .pet-hero-buttons {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
    justify-content: {{ section.settings.text_alignment }};
  }
  
  .pet-hero-btn {
    display: inline-block;
    padding: 16px 48px;
    font-size: 0.875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border: 2px solid;
  }
  
  .pet-hero-btn-primary {
    background: {{ section.settings.primary_button_bg }};
    color: {{ section.settings.primary_button_text }};
    border-color: {{ section.settings.primary_button_bg }};
  }
  
  .pet-hero-btn-primary:hover {
    background: transparent;
    color: {{ section.settings.primary_button_bg }};
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
  }
  
  .pet-hero-btn-secondary {
    background: transparent;
    color: {{ section.settings.secondary_button_text }};
    border-color: {{ section.settings.secondary_button_border }};
  }
  
  .pet-hero-btn-secondary:hover {
    background: {{ section.settings.secondary_button_border }};
    color: #FFFFFF;
    transform: translateY(-2px);
  }
  
  @media (max-width: 768px) {
    .pet-hero-section-{{ section.id }} {
      min-height: {{ section.settings.mobile_height }}px;
    }
    
    .pet-hero-content {
      padding: 60px 20px;
    }
    
    .pet-hero-title {
      font-size: 2rem;
    }
    
    .pet-hero-subtitle {
      font-size: 1rem;
    }
    
    .pet-hero-buttons {
      flex-direction: column;
      align-items: stretch;
    }
    
    .pet-hero-btn {
      text-align: center;
    }
  }
{%- endstyle -%}

<section class="pet-hero-section-{{ section.id }}">
  {% if section.settings.background_image != blank %}
    <img 
      src="{{ section.settings.background_image | img_url: '2000x' }}" 
      alt="{{ section.settings.title }}"
      class="pet-hero-background"
      loading="eager"
    >
  {% endif %}
  
  <div class="pet-hero-overlay"></div>
  
  <div class="pet-hero-content">
    {% if section.settings.eyebrow_text != blank %}
      <div class="pet-hero-eyebrow">{{ section.settings.eyebrow_text }}</div>
    {% endif %}
    
    <h1 class="pet-hero-title">{{ section.settings.title }}</h1>
    
    {% if section.settings.subtitle != blank %}
      <p class="pet-hero-subtitle">{{ section.settings.subtitle }}</p>
    {% endif %}
    
    <div class="pet-hero-buttons">
      {% if section.settings.primary_button_text != blank %}
        <a href="{{ section.settings.primary_button_link }}" class="pet-hero-btn pet-hero-btn-primary">
          {{ section.settings.primary_button_text }}
        </a>
      {% endif %}
      
      {% if section.settings.secondary_button_text != blank %}
        <a href="{{ section.settings.secondary_button_link }}" class="pet-hero-btn pet-hero-btn-secondary">
          {{ section.settings.secondary_button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

