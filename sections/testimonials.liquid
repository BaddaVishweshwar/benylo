{% comment %}
  Testimonials Section
  Displays customer reviews and testimonials
{% endcomment %}

{{ 'custom-theme.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .testimonials-section {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background: {{ section.settings.background_color }};
    position: relative;
    overflow: hidden;
  }
  
  .testimonials-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .testimonials-header {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .testimonials-heading {
    font-size: 2.5rem;
    font-weight: 800;
    margin-bottom: 1rem;
    color: {{ section.settings.heading_color }};
  }
  
  .testimonials-subheading {
    font-size: 1.125rem;
    color: {{ section.settings.text_color_light }};
    max-width: 600px;
    margin: 0 auto;
  }
  
  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }
  
  .testimonial-card {
    background: {{ section.settings.card_background }};
    border-radius: var(--radius-xl, 16px);
    padding: 2rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    border: 1px solid {{ section.settings.card_border }};
  }
  
  .testimonial-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.15);
  }
  
  .testimonial-quote-icon {
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    width: 40px;
    height: 40px;
    opacity: 0.1;
  }
  
  .testimonial-stars {
    display: flex;
    gap: 0.25rem;
    margin-bottom: 1rem;
  }
  
  .star {
    width: 20px;
    height: 20px;
    color: #fbbf24;
  }
  
  .testimonial-text {
    font-size: 1rem;
    line-height: 1.7;
    color: {{ section.settings.text_color }};
    margin-bottom: 1.5rem;
    font-style: italic;
  }
  
  .testimonial-author {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding-top: 1.5rem;
    border-top: 1px solid {{ section.settings.card_border }};
  }
  
  .author-image {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid {{ section.settings.card_border }};
  }
  
  .author-image-placeholder {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 700;
    font-size: 1.25rem;
  }
  
  .author-info {
    flex: 1;
  }
  
  .author-name {
    font-weight: 700;
    color: {{ section.settings.text_color }};
    margin-bottom: 0.25rem;
  }
  
  .author-title {
    font-size: 0.875rem;
    color: {{ section.settings.text_color_light }};
  }
  
  .verified-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    background: #10b981;
    color: white;
    padding: 0.25rem 0.5rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 600;
    margin-top: 0.5rem;
  }
  
  @media (max-width: 768px) {
    .testimonials-heading {
      font-size: 2rem;
    }
    
    .testimonials-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    
    .testimonial-card {
      padding: 1.5rem;
    }
  }
{%- endstyle -%}

<section class="testimonials-section">
  <div class="testimonials-container">
    <div class="testimonials-header">
      {% if section.settings.heading != blank %}
        <h2 class="testimonials-heading animate-fade-in-up">
          {{ section.settings.heading }}
        </h2>
      {% endif %}
      
      {% if section.settings.subheading != blank %}
        <p class="testimonials-subheading animate-fade-in-up delay-100">
          {{ section.settings.subheading }}
        </p>
      {% endif %}
    </div>
    
    <div class="testimonials-grid">
      {% for block in section.blocks %}
        <div class="testimonial-card animate-fade-in-up delay-{{ forloop.index | times: 100 }}" {{ block.shopify_attributes }}>
          <svg class="testimonial-quote-icon" fill="currentColor" viewBox="0 0 24 24">
            <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
          </svg>
          
          <div class="testimonial-stars">
            {% for i in (1..5) %}
              <svg class="star" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
            {% endfor %}
          </div>
          
          <p class="testimonial-text">"{{ block.settings.testimonial_text }}"</p>
          
          <div class="testimonial-author">
            {% if block.settings.author_image != blank %}
              <img src="{{ block.settings.author_image | img_url: '100x100' }}" alt="{{ block.settings.author_name }}" class="author-image">
            {% else %}
              <div class="author-image-placeholder">
                {{ block.settings.author_name | slice: 0 }}
              </div>
            {% endif %}
            
            <div class="author-info">
              <div class="author-name">{{ block.settings.author_name }}</div>
              {% if block.settings.author_title != blank %}
                <div class="author-title">{{ block.settings.author_title }}</div>
              {% endif %}
              {% if block.settings.verified %}
                <span class="verified-badge">
                  <svg width="12" height="12" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  Verified Purchase
                </span>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

