{% comment %}
  Newsletter Signup Section
  Modern newsletter subscription form with incentive
{% endcomment %}

{{ 'custom-theme.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .newsletter-section {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background: {{ section.settings.background_color }};
    position: relative;
    overflow: hidden;
  }
  
  .newsletter-section::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(99, 102, 241, 0.1) 0%, transparent 70%);
    animation: rotate 30s linear infinite;
  }
  
  @keyframes rotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
  
  .newsletter-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    z-index: 1;
  }
  
  .newsletter-content {
    text-align: center;
    background: white;
    padding: 3rem 2.5rem;
    border-radius: 24px;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    position: relative;
  }
  
  .newsletter-icon {
    width: 64px;
    height: 64px;
    margin: 0 auto 1.5rem;
    background: linear-gradient(135deg, #6366f1 0%, #ec4899 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    animation: float 3s ease-in-out infinite;
  }
  
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }
  
  .newsletter-heading {
    font-size: 2.25rem;
    font-weight: 800;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #6366f1 0%, #ec4899 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .newsletter-subheading {
    font-size: 1.125rem;
    color: #6b7280;
    margin-bottom: 2rem;
    line-height: 1.6;
  }
  
  .newsletter-incentive {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 700;
    color: #92400e;
    margin-bottom: 2rem;
  }
  
  .newsletter-form {
    display: flex;
    gap: 0.75rem;
    max-width: 500px;
    margin: 0 auto 1.5rem;
  }
  
  .newsletter-input {
    flex: 1;
    padding: 1rem 1.25rem;
    border: 2px solid #e5e7eb;
    border-radius: 12px;
    font-size: 1rem;
    transition: all 0.3s ease;
  }
  
  .newsletter-input:focus {
    outline: none;
    border-color: #6366f1;
    box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
    transform: translateY(-2px);
  }
  
  .newsletter-submit {
    padding: 1rem 2rem;
    background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
    color: white;
    border: none;
    border-radius: 12px;
    font-weight: 700;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
  }
  
  .newsletter-submit:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 15px -3px rgba(99, 102, 241, 0.3);
  }
  
  .newsletter-submit:active {
    transform: translateY(0);
  }
  
  .newsletter-privacy {
    font-size: 0.75rem;
    color: #9ca3af;
    margin: 0;
  }
  
  .newsletter-privacy a {
    color: #6366f1;
    text-decoration: underline;
  }
  
  .newsletter-features {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid #e5e7eb;
  }
  
  .newsletter-feature {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: #374151;
  }
  
  .newsletter-feature svg {
    width: 20px;
    height: 20px;
    color: #10b981;
    flex-shrink: 0;
  }
  
  .success-message {
    display: none;
    padding: 1rem;
    background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
    border-radius: 12px;
    color: #065f46;
    font-weight: 600;
    margin-top: 1rem;
  }
  
  .success-message.show {
    display: block;
    animation: fadeInUp 0.5s ease-out;
  }
  
  @media (max-width: 768px) {
    .newsletter-content {
      padding: 2rem 1.5rem;
    }
    
    .newsletter-heading {
      font-size: 1.75rem;
    }
    
    .newsletter-subheading {
      font-size: 1rem;
    }
    
    .newsletter-form {
      flex-direction: column;
    }
    
    .newsletter-submit {
      width: 100%;
    }
    
    .newsletter-features {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
  }
{%- endstyle -%}

<section class="newsletter-section">
  <div class="newsletter-container">
    <div class="newsletter-content animate-fade-in-up">
      <div class="newsletter-icon">
        <svg width="32" height="32" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
        </svg>
      </div>
      
      <h2 class="newsletter-heading">{{ section.settings.heading }}</h2>
      <p class="newsletter-subheading">{{ section.settings.subheading }}</p>
      
      {% if section.settings.show_incentive %}
        <div class="newsletter-incentive">
          <svg width="20" height="20" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
          </svg>
          {{ section.settings.incentive_text }}
        </div>
      {% endif %}
      
      {% form 'customer', class: 'newsletter-form', id: 'newsletter-form' %}
        {% if form.posted_successfully? %}
          <div class="success-message show">
            âœ“ Thank you for subscribing! Check your email for your discount code.
          </div>
        {% endif %}
        
        <input 
          type="email" 
          name="contact[email]" 
          class="newsletter-input" 
          placeholder="{{ section.settings.placeholder }}"
          required
          aria-label="Email address"
        >
        <input type="hidden" name="contact[tags]" value="newsletter">
        <button type="submit" class="newsletter-submit">
          {{ section.settings.button_text }}
        </button>
      {% endform %}
      
      <p class="newsletter-privacy">
        {{ section.settings.privacy_text }}
      </p>
      
      <div class="newsletter-features">
        <div class="newsletter-feature">
          <svg fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          Exclusive Deals
        </div>
        <div class="newsletter-feature">
          <svg fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          New Arrivals
        </div>
        <div class="newsletter-feature">
          <svg fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          Style Tips
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Newsletter Signup",
  "tag": "section",
  "class": "section-newsletter",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Join Our VIP List"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Subscribe to get special offers, free giveaways, and exclusive deals."
    },
    {
      "type": "checkbox",
      "id": "show_incentive",
      "label": "Show Incentive Badge",
      "default": true
    },
    {
      "type": "text",
      "id": "incentive_text",
      "label": "Incentive Text",
      "default": "Get 10% off your first order!"
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "Email Placeholder",
      "default": "Enter your email address"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Subscribe"
    },
    {
      "type": "richtext",
      "id": "privacy_text",
      "label": "Privacy Text",
      "default": "<p>We respect your privacy. Unsubscribe at any time.</p>"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f9fafb"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "Newsletter Signup"
    }
  ]
}
{% endschema %}
